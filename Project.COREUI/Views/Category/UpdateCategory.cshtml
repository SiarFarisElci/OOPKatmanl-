@model CategoryVM

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UpdateCategory</h1>



@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Kategori Ekleme Sayfası
                </header>

                <div class="panel-body">
                    @Html.HiddenFor(x=> x.Category.ID)


                    <br /> <br />
                    <div class="form-group">
                        <label class="col-sm-2"> Kategori Adı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik" })
                            @Html.ValidationMessageFor(x=> x.Category.CategoryName)
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-sm-2">İşlem : </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Guncelle</button>
                        </div>
                    </div>



                </div>


            </section>
        </div>
    </div>
}
