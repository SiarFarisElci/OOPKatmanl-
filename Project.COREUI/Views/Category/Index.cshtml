@model CategoryVM 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Categories.Count == 0)
{
    <div>
        Henuz hicbir urun eklenmemiş.. Kategori eklenmek icin <a asp-action="AddCategory" asp-controller="Category"> Tıklayınız </a>
    </div>

}
else
{
    <div class="card card-header">
        <div class="card card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>CategoryName</th>
                     

                        <th>Durum</th>

                        <th colspan="2">  Islemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Category item in Model.Categories)
                    {
                        <tr>
                            <th>@item.CategoryName</th>
                            
                            <th>@item.Status</th>
                           


                            <th>@item.Status</th>
                            <th><a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-warning"> Guncelle </a></th>
                            <th><a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-danger"> Sil </a></th>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}
