@model JobVM

@{
    ViewData["Title"] = "UpdateJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UpdateJob", "Job", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Job Guncelleme Sayfası
                </header>
                @Html.HiddenFor(x=> x.Job.ID)
                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2"> Meslek Adı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Job.Name, new { @class = "form-control genislik" })
                            @Html.ValidationMessageFor(x=> x.Job.Name)
                        </div>
                    </div>




                    <div class="form-group">
                        <label class="col-sm-2">İşlem : </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Guncelle</button>
                        </div>
                    </div>



                </div>


            </section>
        </div>
    </div>
}
