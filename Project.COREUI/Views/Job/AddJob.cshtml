@model JobVM

@{
    ViewData["Title"] = "AddJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AddJob", "Job", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Job Ekleme Sayfası
                </header>

                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2"> Meslek Ismı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Job.Name, new { @class = "form-control genislik" })
                            @Html.ValidationMessageFor(x=> x.Job.Name)
                        </div>
                    </div>

                


                    <div class="form-group">
                        <label class="col-sm-2">İşlem : </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>



                </div>


            </section>
        </div>
    </div>
}
