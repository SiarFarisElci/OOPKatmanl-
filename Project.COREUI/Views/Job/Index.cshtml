@model JobVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model.Jobs.Count == 0)
{
    <div>
        Henuz hicbir urun eklenmemiş.. Meslek eklenmek icin <a asp-action="AddJob" asp-controller="Job"> Tıklayınız </a>
    </div>

}
else
{
    <div class="card card-header">
        <div class="card card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                     

                        <th>Durum</th>

                        <th colspan="2">  Islemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Job item in Model.Jobs)
                    {
                        <tr>
                            <th>@item.Name</th>
                         
                            
                            <th>@item.Status</th>


                            <th>@item.Status</th>
                            <th><a asp-action="UpdateJob" asp-controller="Job" asp-route-id="@item.ID" class="btn btn-warning"> Guncelle </a></th>
                            <th><a asp-action="DeleteJob" asp-controller="Job" asp-route-id="@item.ID" class="btn btn-danger"> Sil </a></th>
                           
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}


