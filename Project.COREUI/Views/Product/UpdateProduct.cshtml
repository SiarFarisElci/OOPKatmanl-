@model ProductVM

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Ürün Guncelleme Sayfası
                </header>
                @Html.HiddenFor(x=> x.Product.ID)
                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2"> Urun Ismi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.Name, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />


                    <div class="form-group">
                        <label class="col-sm-2">Fiyat</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.Price, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />


                    <div class="form-group">
                        <label class="col-sm-2">Stok</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.Stock, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />


                    <div class="form-group">
                        <label class="col-sm-2">Kategori</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Lutfen seciniz", new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />






                    <div class="form-group">
                        <label class="col-sm-2">İşlem : </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Guncelle</button>
                        </div>
                    </div>








                </div>


            </section>
        </div>
    </div>
}

